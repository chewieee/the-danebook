<li>
  <div class="post">
    <%= image_tag "user_silhouette_generic.png", class: "user-photo-xs" %>
    
    <div class="post-info">
      <%= link_to "#{post.user.first_name} #{post.user.last_name}", post.user %>
      <p>Posted on <%= post.created_at.strftime("%m-%d-%Y") %></p>
    </div>
    
    <p class="post-text"><%= post.content %></p>
    
    <div class="post-links">
      <ul>
        <li><%= link_to "Like", "#" %></li>
        <li><%= link_to "Comment", "#" %></li>
        <% if @user == current_user %>
          <li><%= link_to "Delete", post, method: :delete, class: "post-delete-link", data: { confirm: "You sure?" } %></li>
        <% end %>
      </ul>
    </div>

    <div class="post-like-field">
      <p>You and Hermoine Granger and 3 others like this</p>
    </div>
    
      <% if post.comments.any? %>
        
          <% post.comments.each do |comment| %>
            <%= render 'comments/comment', comment: comment %>
       
         <% end %>
      <% end %>  
      <%= render 'comments/comment_form', post: post %>
   
  </div>
</li>